{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "bracketSpacing": true,
        "explicitTypes": "always",
        "printWidth": 99,
        "singleQuote": false,
        "tabWidth": 4,
        "useTabs": false
      }
    },
    {
      "files": [
        "*.ts",
        "*.js"
      ],
      "options": {
        "bracketSpacing": true,
        "explicitTypes": "always",
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "useTabs": false
      }
    }
  ]
}